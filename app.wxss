/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
} 
.btn{
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(to right,#f04aaf,#ee7dc2);
  background: -webkit-linear-gradient(to right,#f04aaf,#ee7dc2);
  color: #fff;
}
.btn[disabled]{
  opacity: 0.6;
  color: #fff;
}
