/* pages/nightMode/nightMode.wxss */
page{
  width: 100%;
  height: 100%;
}
.container{
  padding: 60rpx;
  background: linear-gradient(to bottom,#27153d,#030006);
  background: -webkit-linear-gradient(to bottom,#27153d,#030006);
  width: 100%;
  height: 100%;
  display: block;
}
.night-mode{
  position: relative;
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  -webkit-border-radius: 20rpx;
  padding: 40rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.sec-block{
  position: relative;
  width: 55px;
  height: 55px;
}

.sec-block .canvas{
  position: absolute;
  top: 0;
  left: 0;
  width: 60px;
  height: 60px;
}
.mode-img{
  width: 60%;
  margin: 10rpx auto;
  display: block;
}
.mode-tips{
  width: 100%;
  text-align: center;
  margin-top: 40rpx;
}
.feature-list{
  position: absolute;
  top: 40rpx;
  right: 30rpx;
  width: 150rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.feature-list .feature-item{
  width: 150rpx;
  flex: 1;
  text-align: center;
  margin-bottom: 10rpx;
}
.feature-list .feature-item image{
  width: 100rpx;
  height: 100rpx;
}
.feature-list .feature-item text{
  display: block;
  text-align: center;
  font-size: 12px;
}
.mode-btn-block{
  width: 100%;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
}
.mode-btn-block .btn{
  margin: 0 20rpx;
}