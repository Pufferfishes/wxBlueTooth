page{
  display: block;
  min-height: 100%;
  position: relative;
}
.index-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}
.container{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
  z-index: 1;
}
.userinfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.userinfo .switch-mode{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.userinfo image{
  width: 20px;
  height: 20px;
  margin-right: 5px;
}
.userinfo text{
  color: #fff;
  font-size: 14px;
}
.device-icon{
  width: 220px;
  height: 220px;
  margin: 40rpx auto;
  position: relative;
}
.device-icon>image{
  width: 220px;
  height: 220px;
}
.device-icon>text{
  display: block;
  width: 220px;
  height: 220px;
  text-align: center;
  line-height: 220px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 3;
  font-size: 65px;
  color: #f04aaf;
}

.usermotto {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  height: auto;
  z-index: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.usermotto .btn{
  margin: 0 20rpx;
}
.ready-tips{
  color: #fff;
  font-size: 15px;
}