/**index.wxss**/
page{
  display: block;
  min-height: 100%;
  position: relative;
  background: #f057b4;
}
.index-bg{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}
.container{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
  z-index: 1;
}
.userinfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.userinfo>view{
  display: flex;
  display: -webkit-flex;
  align-items: center;
}
.userinfo .tips{
  color: #fff;
  font-size: 14px;
}
.device-icon{
  width: 170px;
  height: 170px;
}
.index-icon{
  width: 200px;
  height: 200px;
  margin: 30rpx auto 30rpx;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
  border-radius: 50%;
  overflow: hidden;
}

.userinfo-nickname {
  color: #fff;
  font-size: 14px;
}

.usermotto {
  width: 100%;
  height: auto;
  position: absolute;
  bottom: 40rpx;
  left: 0;
  padding: 0 20rpx;
  z-index: 33;
  box-sizing:border-box;
}
.explain{
  width: 100%;
  height: auto;
  background: #fff;
  border-radius: 10rpx;
  -webkit-border-radius: 10rpx;
  overflow:hidden;
  box-shadow:0px 0px 3px 1px #e6e6e6;
  -webkit-box-shadow:0px 0px 3px 1px #e6e6e6;

}
.explain>image{
  width: 100%;
  height: auto;
}
.explain>text{
  color: #666;
  font-size: 14px;
  padding: 10rpx 20rpx 20rpx;
  display: block;
}
.explain .explainTitle{
  font-size: 16px;
  color: #222;
  padding-bottom: 5rpx;
}