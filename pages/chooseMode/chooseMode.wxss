/**index.wxss**/
page{
  display: block;
  min-height: 100%;
  position: relative;
}
.index-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}
.container{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
  z-index: 1;
}
.userinfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.userinfo>view{
  display: flex;
  display: -webkit-flex;
  align-items: center;
}
.userinfo .tips{
  color: #fff;
  font-size: 14px;
}
.device-icon{
  width: 220px;
  height: 220px;
  margin-top: 40rpx;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
  border-radius: 50%;
  overflow: hidden;
}

.userinfo-nickname {
  color: #fff;
  font-size: 14px;
}

.usermotto {
  position: absolute;
  bottom: 70rpx;
  left: 0;
  width: 100%;
  height: auto;
  z-index: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.usermotto .btn{
  margin: 0 10rpx;
}
.modeBtn{
  border: 1px solid #999;
  background: transparent;
  color: #999;
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
  align-items: center;
  font-size: 32rpx;
}
.modeBtn::after{
  border: none;
}
.modeBtn>image{
  width: 25px;
  height: 25px;
}